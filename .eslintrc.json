{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "rules": {
    "no-debugger": "off",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-use-before-define": "error",
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "semi": ["warn", "always"],
    "semi-spacing": [
      "error", {
        "before": false,
        "after": true
      }
    ],
    "no-dupe-else-if": "warn",
    "brace-style": "warn",
    "block-spacing": ["warn", "always"],
    "no-trailing-spaces": "warn",
    "no-undef": "error",
    "camelcase": [
      "warn",  {
        "properties": "always"
      }
    ],
    "function-call-argument-newline": ["error", "never"],
    "comma-spacing": [
      "warn", {
        "before": false,
        "after": true
      }
    ],
    "capitalized-comments": "warn",
    "key-spacing": [
      "warn", {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "object-curly-newline": [
      "warn", {
        "minProperties": 2
      }
    ],
    "curly": 1,
    "object-curly-spacing": ["warn", "always"]
  }
}